        app:layout_constraintVertical_bias="0.248" />

    <Button
        android:id="@+id/button2"
        android:layout_width="190dp"
        android:layout_height="68dp"
        android:text="Continuar navegando"
        app:layout_constraintBottom_toBottomOf="parent"
